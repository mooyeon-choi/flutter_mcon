{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format All Files",
      "type": "shell",
      "command": "dart format .",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Analyze",
      "type": "shell",
      "command": "flutter analyze",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "flutter test",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Clean & Get Dependencies",
      "type": "shell",
      "command": "flutter clean && flutter pub get",
      "problemMatcher": []
    },
    {
      "label": "Build Web (docs)",
      "type": "shell",
      "command": "cd docs && flutter build web --release",
      "problemMatcher": []
    }
  ]
}
